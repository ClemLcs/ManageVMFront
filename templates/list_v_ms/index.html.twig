{% extends 'base.html.twig' %}

{% block title %}Machines Virtuelles{% endblock %}

{% block stylesheets %}
    <style>
        .page-header {
            background: var(--card-bg);
            padding: 1.25rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
        }

        .page-header h1 {
            margin: 0 0 0.25rem 0;
            color: var(--text-primary);
            font-size: 1.5rem;
            font-weight: 700;
        }

        .page-header p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.8125rem;
        }

        .vm-toolbar {
            background: var(--card-bg);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
        }

        .vm-toolbar form {
            flex: 1;
            max-width: 350px;
            margin: 0;
        }

        .vm-toolbar input[type="search"] {
            margin: 0;
            background: var(--gray-50);
            border: 1px solid var(--border-color);
            padding: 0.5rem 0.75rem;
            font-size: 0.8125rem;
        }
        
        .vm-toolbar input[type="search"]:focus {
            border-color: var(--primary-500);
            box-shadow: var(--focus-ring);
        }
        
        .vm-toolbar a[role="button"] {
            white-space: nowrap;
            padding: 0.5rem 1rem;
            font-size: 0.8125rem;
        }

        .vm-table-container {
            background: var(--card-bg);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
        }

        table {
            width: 100%;
            margin: 0;
            font-size: 0.8125rem;
        }
        
        thead tr {
            background: var(--gray-50);
        }
        
        thead th {
            color: var(--text-primary);
            font-weight: 600;
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 0.75rem 1rem;
        }
        
        tbody tr {
            border-bottom: 1px solid var(--border-color);
        }
        
        tbody tr:last-child {
            border-bottom: none;
        }
        
        tbody tr:hover {
            background: var(--gray-50);
        }
        
        tbody td {
            padding: 0.75rem 1rem;
        }

        .vm-status-running { 
            color: var(--success); 
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .vm-status-stopped { 
            color: var(--danger); 
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .actions {
            white-space: nowrap;
        }

        .actions a { 
            margin-right: 0.5rem;
            font-size: 0.75rem;
            padding: 0.375rem 0.75rem;
        }
        
        .actions a:last-child {
            margin-right: 0;
        }

        @media (max-width: 1024px) {
            .page-header {
                padding: 1rem 1.25rem;
            }
            
            .page-header h1 {
                font-size: 1.25rem;
            }
        }

        @media (max-width: 768px) {
            .page-header {
                padding: 0.875rem 1rem;
            }
            
            .page-header h1 {
                font-size: 1.125rem;
            }
            
            .vm-toolbar {
                flex-direction: column;
                align-items: stretch;
                padding: 0.875rem;
            }

            .vm-toolbar form {
                max-width: 100%;
            }
            
            table {
                font-size: 0.75rem;
            }
            
            thead th {
                font-size: 0.625rem;
                padding: 0.625rem 0.5rem;
            }
            
            tbody td {
                padding: 0.625rem 0.5rem;
            }
            
            .actions a {
                padding: 0.3rem 0.6rem;
                font-size: 0.6875rem;
            }
        }
        
        @media (max-width: 480px) {
            /* Hide less important columns on small screens */
            table th:nth-child(3),
            table td:nth-child(3),
            table th:nth-child(4),
            table td:nth-child(4) {
                display: none;
            }
            
            .page-header {
                padding: 0.75rem;
            }
            
            .vm-toolbar {
                padding: 0.75rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Machines Virtuelles</h1>
    <p>Gestion et aperçu rapide de vos machines virtuelles</p>
</div>

<div class="vm-toolbar">
    <form method="get" style="flex: 1; max-width: 400px; margin: 0;">
        <input id="q" name="q" type="search" placeholder="Rechercher par nom, IP...">
    </form>
    <a class="contrast" href="#" role="button">+ Créer une VM</a>
</div>

{% if vms is empty %}
    <div class="vm-table-container" style="padding: 2rem; text-align: center;">
        <p>Aucune machine virtuelle trouvée.</p>
    </div>
{% else %}
    <div class="vm-table-container">
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>IP</th>
                    <th>CPU</th>
                    <th>RAM</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for vm in vms %}
                    <tr>
                        <td><strong>{{ vm.name }}</strong></td>
                        <td>{{ vm.ip }}</td>
                        <td>{{ vm.cpu }} vCPU</td>
                        <td>{{ vm.ram }}</td>
                        <td>
                            {% if vm.status == 'running' %}
                                <span class="vm-status-running">● En cours</span>
                            {% else %}
                                <span class="vm-status-stopped">● Arrêtée</span>
                            {% endif %}
                        </td>
                        <td class="actions">
                            <a class="secondary" href="{{ path('app_vm_details', {'id': vm.id}) }}">Détails</a>
                            {% if vm.status == 'running' %}
                                <a class="danger" href="#">Arrêter</a>
                            {% else %}
                                <a class="primary" href="#">Démarrer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
{% endblock %}
