{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tab switching
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const targetTab = btn.dataset.tab;
            
            tabBtns.forEach(b => b.classList.remove('active'));
            tabPanes.forEach(p => p.classList.remove('active'));
            
            btn.classList.add('active');
            document.getElementById(`tab-${targetTab}`).classList.add('active');
        });
    });

    // Initialize charts
    const hours = [];
    for (let i = 11; i >= 0; i--) {
        hours.push((new Date().getHours() - i + 24) % 24 + 'h');
    }

    const chartConfig = {
        type: 'line',
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: { enabled: false }
            },
            scales: {
                y: {
                    display: false,
                    beginAtZero: true,
                    max: 100
                },
                x: {
                    display: false
                }
            },
            elements: {
                line: {
                    borderWidth: 2,
                    tension: 0.4
                },
                point: {
                    radius: 0
                }
            }
        }
    };

    // CPU Chart
    new Chart(document.getElementById('cpuChart'), {
        ...chartConfig,
        data: {
            labels: hours,
            datasets: [{
                data: [30, 35, 40, 45, 50, 48, 42, 38, 45, 50, 48, 45],
                borderColor: '#10b981',
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                fill: true
            }]
        }
    });

    // RAM Chart
    new Chart(document.getElementById('ramChart'), {
        ...chartConfig,
        data: {
            labels: hours,
            datasets: [{
                data: [55, 58, 60, 62, 65, 63, 60, 58, 62, 64, 63, 62],
                borderColor: '#8b5cf6',
                backgroundColor: 'rgba(139, 92, 246, 0.1)',
                fill: true
            }]
        }
    });

    // Disk Chart
    new Chart(document.getElementById('diskChart'), {
        ...chartConfig,
        data: {
            labels: hours,
            datasets: [{
                data: [35, 36, 37, 38, 39, 38, 37, 36, 38, 39, 38, 38],
                borderColor: '#f59e0b',
                backgroundColor: 'rgba(245, 158, 11, 0.1)',
                fill: true
            }]
        }
    });

    // Network Chart
    const networkConfig = {...chartConfig};
    delete networkConfig.options.scales.y.max;
    
    new Chart(document.getElementById('networkChart'), {
        ...networkConfig,
        data: {
            labels: hours,
            datasets: [{
                data: [15, 18, 22, 20, 25, 28, 24, 20, 22, 26, 25, 24],
                borderColor: '#3b82f6',
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                fill: true
            }]
        }
    });
});
</script>
